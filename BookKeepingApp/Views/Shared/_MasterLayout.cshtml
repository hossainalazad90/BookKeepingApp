<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
            .footer {
                left: 0;
                bottom: 0;
                width: 100%;
                text-align: center;
            }

        .main-container{
            min-height:85vh;
        }
        </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" asp-action="Index" asp-controller="Home">BOOKKEEPING</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        @*<li class="active"><a asp-action="Index" asp-controller="Home" >Dashboard</a></li>*@
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Predefined Data
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Index" asp-controller="IncomeExpenseHead">Income Expense Head</a></li>
                                <li><a asp-action="Index" asp-controller="ReconciliationHeadType">Reconciliation Type</a></li>

                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Entries
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Index" asp-controller="Income">Income</a></li>
                                <li><a asp-action="Index" asp-controller="Expense">Expense</a></li>
                                <li><a asp-action="Create" asp-controller="Reconciliation">Reconciliation</a></li>
                            </ul>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-container " >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">

        <div class="text-center">
            &copy;@DateTime.Now.Year Copyright:
            <a class="text-white" asp-action="Index" asp-controller="Home">BookKeeping App</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
